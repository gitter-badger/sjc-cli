#!/bin/bash
DIR=$(git rev-parse --show-toplevel)
. $DIR/vars.sh
docker stop $app_containername 2> /dev/null
docker rm $app_containername 2> /dev/null
docker run -d -P \
	-e branch=$branch \
	-e appname=$appname \
	--link $db_containername:db \
	--name=$app_containername \
	--label=io.sjc.branch=$branch \
	--label=io.sjc.appname=$appname \
	$app_imagename:$branch
