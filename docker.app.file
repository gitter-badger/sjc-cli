FROM php:5.6-apache
MAINTAINER Sean Macdonald <sean@crazyhorsecoding.com>
COPY code /var/www/html
COPY vhost.conf /etc/apache2/sites-available/000-default.conf
COPY apache2.conf /etc/apache2/apache2.conf
RUN apt-get update \
	&& docker-php-ext-install mysqli
RUN a2enmod rewrite
VOLUME ["/var/www/html","/logz","/etc/apache2/sites-available"]
LABEL io.sjc.domainMatch="highlandfarms\."
LABEL io.sjc.serviceType="web server"
LABEL io.sjc.appname="highlandfarms"
EXPOSE 80
